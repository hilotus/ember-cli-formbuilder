<div class="fb-field-label">
  <code class="field-name">{{model.name}}</code>
  <code class="field-type">{{model.type}}</code>
</div>

<div class="fb-edit-section-header">Label</div>
<div class="form-group">
  {{input class="form-control" value=model.displayName placeholder='Display Name'}}
</div>
<div class="form-group">
  {{textarea class="form-control" value=model.description placeholder='Description'}}
</div>
<div class="form-group">
  {{input id="fb-required" type="checkbox" checked=model.required}} <label for="fb-required">Required</label>
</div>
<div class="form-group">
  {{input id="fb-wholeLine" type="checkbox" checked=model.wholeLine}} <label for="fb-wholeLine">Whole line</label>
</div>

<div class="fb-edit-section-header">Options</div>
<div class="form-group">
  {{#if isText}}
    {{input class="form-control" value=model.defaultValue}}
  {{else if isParagraph}}
    {{textarea class="form-control" value=model.defaultValue}}
  {{/if}}
</div>
